{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build all",
      "type": "shell",
      "command": "deno run --allow-all --import-map import_map.json bin/build.ts src/*.user.ts",
      "problemMatcher": "$deno"
    },
    {
      "label": "Watch",
      "type": "shell",
      "command": "deno run --allow-all --import-map import_map.json --watch=${file} bin/build.ts \"${file}\"",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$deno"
    }
  ]
}
